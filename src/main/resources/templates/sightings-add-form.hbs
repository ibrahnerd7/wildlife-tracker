{{#partial "content"}}
    <h3 class="mt-5 text-white">Add a Sighting</h3>
    <div class="card col-md-4 mt-4">
        <form action="/heroes/add" method="post" name="heroesForm">
            <div class="form-group">
                <label for="heroName">Wildlife Name</label>
                <input type="text" name="heroName" id="heroName" class="form-control">
            </div>
            <div class="form-group">
                <label for="heroAge">Ranger Name</label>
                <input type="number" name="heroAge" id="heroAge" class="form-control" min="1" max="100">
            </div>
            <div class="form-group">
                <label for="heroWeakness">Location</label>
                <select name="heroWeakness" id="heroWeakness" class="form-control">
                    <option value="Women">Women</option>
                    <option value="Ego">Ego</option>
                    <option value="Alcoholism">Alcoholism</option>
                    <option value="Fire">Fire</option>
                    <option value="Radiation">Radiation</option>
                    <option value="WitchCraft">WitchCraft</option>
                </select>
            </div>
            <button class="btn btn-success  mb-4 btn-custom" type="submit">Add Sighting</button>
        </form>
    </div>
{{/partial}}
{{>layout.hbs}}
